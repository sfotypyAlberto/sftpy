@import "normalize.styl"

gris_oscuro = #333333
gris_claro =#818181

h1
	color red
	
a 
	text-decoration none

body
	font-size :16px //es la fuente mas legible, menos no.. a no ser que sea un enlace chiquittin
	font-family 'Varela Round', sans-serif


figure
	margin 0
	

//buttons
.buttons-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em

	
//oocss clases
//ahora 1em valdria 16px.
.container 
	padding 1.4rem
	font-size 0
	text-align center
	

.border-bottom
	border-bottom 1px solid gris_claro

.name
	color gris_oscuro
	
.menu
	display none
	
.relative
	position relative


.author
	color gris_claro
	


.header
	height 3.5em
	// a
	// 	display none
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.song
	width 8rem //en em serian 128/16 = 8em	
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	
	&:nth-child(even)
		margin-right 0
	
	p
		margin .5em 0
	

